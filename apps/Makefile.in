TQSLLIB=@TQSLLIB@
LIBS=-lcrypto
INCDIR = -I$(TQSLLIB)
CXXFLAGS = -O0 -g3 -Wall $(INCDIR) @DEFS@ `wx-config --cflags`
LDLIBS = $(LIBS) -L$(TQSLLIB) -ltqsllib `wx-config --libs`
TQSLLIBFILE=$(TQSLLIB)/libtqsllib.a

TARGETS = tqslcert

all: $(TARGETS)

TQSLCERT_OBJ = tqslcert.o crqwiz.o dxcc.o certtree.o tqslcert_prefs.o

tqslcert: $(TQSLCERT_OBJ) $(TQSLLIBFILE)
	$(CC) $(CXXFLAGS) $(LDFLAGS) -o $@ $(TQSLCERT_OBJ) $(LDLIBS) -lstdc++

include apps.depends

%.o: %.cpp
	g++ $(CXXFLAGS) -c -o $@ $*.cpp

clean:
	rm -f $(TARGETS) *.o *.a *~ xxx.*

distclean:
	$(MAKE) clean
	rm -f config.status config.cache confiog.log \
	Makefile Makefile.g95

